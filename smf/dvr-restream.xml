<?xml version="1.0"?>
<!DOCTYPE service_bundle SYSTEM "/usr/share/lib/xml/dtd/service_bundle.dtd.1">

<service_bundle type='manifest' name='dvr-restream'>

  <service name='network/dvr-restream' type='service' version='1'>
    <create_default_instance enabled='true' />
    <single_instance />

    <!-- Wait for the network to be up before we start -->
    <dependency name='network' grouping='require_all' restart_on='error' type='service'>
      <service_fmri value='svc:/milestone/network:default'/>
    </dependency>

    <exec_method name='start' type='method'
      exec='%{config/exec} -c %{config/file}'
      timeout_seconds='60'>
      <method_context security_flags='aslr'>
        <method_credential user='restream' group='restream'
          privileges='basic,!proc_info,!proc_session'/>
      </method_context>
    </exec_method>

    <exec_method name='stop' type='method' exec=':kill' timeout_seconds='60'/>

    <property_group name='config' type='application'>
      <propval name='exec' type='astring' value='/opt/dvr-restream/bin/dvr-restream' />
      <propval name='file' type='astring' value='/opt/dvr-restream/etc/config.toml' />
    </property_group>

    <property_group name='startd' type='framework'>
      <propval name='duration' type='astring' value='child' />
    </property_group>

    <stability value='Unstable' />

    <template>
      <common_name>
        <loctext xml:lang='C'>dvr-restream</loctext>
      </common_name>
      <description>
        <loctext xml:lang='C'>http server to restream channels DVR</loctext>
      </description>
    </template>
  </service>

</service_bundle>
